{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"saimirgasa/multi-client",
            "hostname":"client",
            "essential":false
        },
        {
            "name":"server",
            "image":"saimirgasa/multi-server",
            "hostname":"api",
            "essential":false
        },
        {
            "name":"worker",
            "image":"saimirgasa/multi-worker",
            "hostname":"worker",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"saimirgasa/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}